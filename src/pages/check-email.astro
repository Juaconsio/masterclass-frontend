---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="container mx-auto px-4 py-24">
    <div class="max-w-xl mx-auto bg-base-100 shadow-md rounded-lg p-8 text-center">
      <h1 class="text-2xl font-bold mb-4">Please check your email</h1>
      <p class="text-base-content text-sm mb-6">
        We've sent a confirmation email to the address you provided. Please open that email and
        follow the instructions to activate your account.
      </p>
      <a href="/" class="btn btn-secondary">Return to homepage</a>
    </div>
  </div>
</Layout>
