---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import { courses } from "../../data/courses";

// Generate static paths for all courses
export async function getStaticPaths() {
  return courses.map(course => ({
    params: { id: course.id },
    props: { course }
  }));
}

// Get the course from props (passed by getStaticPaths)
const { course } = Astro.props;

// If course not found, we'll handle it in the template
---

<Layout>
  <div class="min-h-screen">
    <Navbar />
    
    {!course ? (
      <!-- Course Not Found -->
      <div class="min-h-screen flex items-center justify-center pt-20">
        <div class="text-center">
          <h1 class="text-4xl font-bold mb-4">Course Not Found</h1>
          <a href="/courses" class="btn btn-primary">
            Back to Courses
          </a>
        </div>
      </div>
    ) : (
      <!-- Course Detail Content -->
      <div class="pt-24 pb-16">
        <div class="container mx-auto px-4">
          <!-- Breadcrumb -->
          <div class="mb-8">
            <a 
              href="/" 
              class="inline-flex items-center gap-2 text-base-content/70 hover:text-primary transition-colors"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to Home
            </a>
          </div>

          <div class="grid lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
              <div class="mb-6">
                <div class="badge badge-primary mb-4">{course.category}</div>
                <h1 class="text-4xl font-bold mb-4">{course.title}</h1>
                <p class="text-xl text-base-content/70 mb-6">{course.description}</p>
                
                <div class="flex items-center gap-6 text-sm text-base-content/70 flex-wrap">
                  <div class="flex items-center gap-1">
                    <svg class="h-4 w-4 fill-yellow-400 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                    </svg>
                    <span class="font-medium">{course.rating}</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{course.frequency}</span>
                  </div>
                  <div class="badge badge-outline">{course.level}</div>
                </div>
              </div>

              <img
                src={course.image}
                alt={course.title}
                class="w-full h-64 md:h-80 object-cover rounded-lg mb-8"
              />

              <div class="grid md:grid-cols-2 gap-8">
                <!-- What You'll Learn -->
                <div class="card bg-base-100 shadow-xl">
                  <div class="card-body">
                    <h2 class="card-title">
                      Contenidos del Curso
                    </h2>
                    <ul class="space-y-3">
                      {course.topics && course.topics.map((topic, index) => (
                        <li class="flex items-center gap-2">
                          <svg class="h-4 w-4 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          <span>{topic}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>

                <!-- Prerequisites -->
                {course.prerequisites && (
                  <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                      <h2 class="card-title">Prerrequisitos</h2>
                      <ul class="space-y-2">
                        {course.prerequisites.map((prereq, index) => (
                          <li class="flex items-center gap-2">
                            <div class="w-2 h-2 bg-primary rounded-full flex-shrink-0"></div>
                            <span>{prereq}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                )}
              </div>

              <!-- About the Instructor -->
              <div class="card bg-base-100 shadow-xl mt-8">
                <div class="card-body">
                  <h2 class="card-title">Sobre el Profesor</h2>
                  <div class="flex items-center gap-4 mb-4">
                    <div class="avatar avatar-placeholder">
                      <div class="bg-primary text-primary-content rounded-full w-16 h-16">
                        <span class="text-xl font-bold">
                          {course.tutor.split(' ').map(n => n[0]).join('')}
                        </span>
                      </div>
                    </div>
                    <div>
                      <h3 class="text-xl font-semibold">{course.tutor}</h3>
                      <p class="text-base-content/70">Expert {course.category} Instructor</p>
                    </div>
                  </div>
                  <p class="text-base-content/70">
                    Experienced professional with over 10 years in {course.category.toLowerCase()}, 
                    passionate about education and helping students achieve their goals.
                  </p>
                </div>
              </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
              <div class="card bg-base-100 shadow-xl sticky top-24">
                <div class="card-body">
                  <div class="text-center mb-6">
                    <div class="text-3xl font-bold text-primary mb-2">${course.price}</div>
                    <p class="text-base-content/70">Full course access</p>
                  </div>

                  <button class="btn btn-primary w-full mb-4">
                    Ver Sesiones
                  </button>
                  
                  <button class="btn btn-disabled	btn-outline w-full mb-6">
                    Agregar a Favoritos
                  </button>

                  <div class="space-y-4 text-sm">
                    <div class="flex items-center justify-between">
                      <span class="text-base-content/70">Frecuencia</span>
                      <span class="font-medium">{course.frequency}</span>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-base-content/70">Sigla</span>
                      <div class="badge badge-outline">{course.level}</div>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-base-content/70">Tipo de sesiones</span>
                      <span class="font-medium">{course.format.join(", ")}</span>
                    </div>
                    <div class="flex items-center justify-between">
                      <span class="text-base-content/70">Certificate</span>
                      <span class="font-medium text-success">Yes</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>