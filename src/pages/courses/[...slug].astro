---
import { getEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import NavBar from '@components/landing/Navbar.astro';
import Header from '@components/landing/courses/header.astro';
import Aside from '@components/landing/courses/aside.astro';

export const prerender = false; // para el contenido dinÃ¡mico

// Get the course from the URL slug
const { slug } = Astro.params;
const course = await getEntry('courses', slug as string);

if (!course) {
  return Astro.redirect('/404');
}

const { Content } = await course.render();

// Find related courses (same department, different course)
const allCourses = await getCollection('courses');
const relatedCourses = allCourses
  .filter((c) => c.data.department === course.data.department && c.slug !== course.slug)
  .slice(0, 3);
---

<Layout title={`${course.data.acronym} - ${course.data.title}`}>
  <main class="min-h-screen bg-base-100 flex flex-col">
    <NavBar />
    <div class="flex-grow pt-16 flex flex-col">
      <!-- Breadcrumbs -->
      <div class="breadcrumbs text-sm container mx-auto px-4 pt-4">
        <ul>
          <li><a href="/" class="link link-hover">Inicio</a></li>
          <li><a href="/courses" class="link link-hover">Cursos</a></li>
          <li>
            <a
              href={`/courses?department=${encodeURIComponent(course.data.department)}`}
              class="link link-hover"
            >
              {course.data.department}
            </a>
          </li>
          <li>{course.data.acronym}</li>
        </ul>
      </div>

      <div class="order-2 mx-auto min-h-screen h-full flex gap-10">
        <div class="flex flex-col md:basis-7/10 overflow-y-auto mx-10">
          <div class="basis-4/10">
            <Header course={course.data} />
          </div>
          <div class="h-full w-full md:hidden right-0 md:sticky top-16 p-4">
            <Aside course={course.data} />
          </div>
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <div
                class="prose prose-lg max-w-none
                          prose-headings:text-primary
                          prose-h1:text-3xl prose-h1:font-bold prose-h1:mb-6 prose-h1:mt-0
                          prose-h2:text-2xl prose-h2:font-semibold prose-h2:mb-4 prose-h2:mt-8 prose-h2:text-secondary
                          prose-h3:text-xl prose-h3:font-medium prose-h3:mb-3 prose-h3:mt-6 prose-h3:text-secondary
                          prose-p:text-base-content prose-p:leading-relaxed prose-p:mb-4
                          prose-strong:text-base-content prose-strong:font-semibold
                          prose-ul:my-4 prose-li:my-2 prose-li:text-base-content
                          prose-ol:my-4 prose-ol:text-base-content
                          prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:bg-base-200 prose-blockquote:p-4 prose-blockquote:rounded-r-lg prose-blockquote:my-6
                          prose-code:bg-base-200 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:text-accent-content
                          prose-pre:bg-base-300 prose-pre:p-4 prose-pre:rounded-lg prose-pre:overflow-x-auto
                          prose-hr:border-base-300 prose-hr:my-8
                          prose-table:table-auto prose-table:w-full
                          prose-th:bg-primary prose-th:text-primary-content prose-th:p-3 prose-th:text-left
                          prose-td:p-3 prose-td:border-b prose-td:border-base-300
                          prose-img:rounded-lg prose-img:shadow-lg prose-img:mx-auto"
              >
                <Content />
              </div>
            </div>
          </div>
          {
            relatedCourses.length > 0 && (
              <div class="card shadow-xl">
                <div class="card-body">
                  <h3 class="card-title text-base-content/70">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                      />
                    </svg>
                    Cursos Relacionados
                  </h3>

                  <div class="space-y-3 flex flex-wrap gap-3 mt-4">
                    {relatedCourses.map((relatedCourse) => (
                      <a
                        href={`/courses/${relatedCourse.slug}`}
                        class="block w-xs bg-white  p-3 shadow-md hover:shadow-xl rounded-lg transition-colors"
                      >
                        <div class="flex justify-between items-start">
                          <div>
                            <div class="font-mono text-sm text-base-content/70">
                              {relatedCourse.data.acronym}
                            </div>
                            <div class="font-medium line-clamp-2">{relatedCourse.data.title}</div>
                            <div class="text-sm text-primary font-medium">
                              ${relatedCourse.data.basePrice.toLocaleString('es-CL')}
                            </div>
                          </div>
                        </div>
                      </a>
                    ))}
                  </div>
                  <div class="card-actions">
                    <a
                      href={`/courses?department=${encodeURIComponent(course.data.department)}`}
                      class="btn btn-accent  btn-sm"
                    >
                      Ver todos los cursos de {course.data.department}
                    </a>
                  </div>
                </div>
              </div>
            )
          }
        </div>
        <div class="h-full w-sm md:basis-3/10 right-0 md:sticky top-16 p-4 hidden md:block">
          <Aside course={course.data} />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
