---
import { getEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { DEPARTMENT_COLORS, LEVEL_COLORS, DEPARTMENT_ICONS } from '../../types/course';
import Navbar from '../../components/Navbar.astro';

export const prerender = false; // para el contenido dinámico

// Get the course from the URL slug
const { slug } = Astro.params;
const course = await getEntry('courses', slug as string);

if (!course) {
  return Astro.redirect('/404');
}

const { Content } = await course.render();

// Find related courses (same department, different course)
const allCourses = await getCollection('courses');
const relatedCourses = allCourses
  .filter(c => c.data.department === course.data.department && c.slug !== course.slug)
  .slice(0, 3);
---

<Layout title={`${course.data.acronym} - ${course.data.title}`}>
  <main class="min-h-screen bg-base-100">
    <Navbar />
    <!-- Breadcrumbs -->
    <div class="breadcrumbs text-sm container mx-auto px-4 pt-4">
      <ul>
        <li><a href="/" class="link link-hover">Inicio</a></li>
        <li><a href="/courses" class="link link-hover">Cursos</a></li>
        <li><a href={`/courses?department=${encodeURIComponent(course.data.department)}`} class="link link-hover">
          {course.data.department}
        </a></li>
        <li>{course.data.acronym}</li>
      </ul>
    </div>

    <!-- Course Header -->
    <section class="hero bg-gradient-to-r from-primary/10 to-secondary/10 py-16">
      <div class="hero-content text-center">
        <div class="max-w-4xl">
          <!-- Course Image/Icon -->
          {course.data.image ? (
            <div class="avatar mb-6">
              <div class="w-32 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2">
                <img src={course.data.image} alt={course.data.title} />
              </div>
            </div>
          ) : (
            <div class="text-8xl mb-6">
              {DEPARTMENT_ICONS[course.data.department]}
            </div>
          )}

          <!-- Course Acronym and Title -->
          <div class="mb-4">
            <div class="badge badge-ghost badge-lg font-mono font-bold text-lg mb-2">
              {course.data.acronym}
            </div>
            {course.data.featured && (
              <div class="badge badge-warning badge-lg ml-2">
                ⭐ Curso Destacado
              </div>
            )}
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{course.data.title}</h1>
          
          <!-- Department and Level Badges -->
          <div class="flex justify-center gap-3 mb-6">
            <div class={`badge ${DEPARTMENT_COLORS[course.data.department]} badge-lg text-base px-4 py-3`}>
              {DEPARTMENT_ICONS[course.data.department]} {course.data.department}
            </div>
            <div class={`badge ${LEVEL_COLORS[course.data.level]} badge-lg text-base px-4 py-3`}>
              {course.data.level}
            </div>
          </div>
          
          <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
            {course.data.description}
          </p>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Course Content from Markdown -->
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <div class="prose prose-lg max-w-none 
                          prose-headings:text-primary 
                          prose-h1:text-3xl prose-h1:font-bold prose-h1:mb-6 prose-h1:mt-0
                          prose-h2:text-2xl prose-h2:font-semibold prose-h2:mb-4 prose-h2:mt-8 prose-h2:text-secondary
                          prose-h3:text-xl prose-h3:font-medium prose-h3:mb-3 prose-h3:mt-6 prose-h3:text-accent
                          prose-p:text-base-content prose-p:leading-relaxed prose-p:mb-4
                          prose-a:text-primary prose-a:no-underline hover:prose-a:underline
                          prose-strong:text-base-content prose-strong:font-semibold
                          prose-ul:my-4 prose-li:my-2 prose-li:text-base-content
                          prose-ol:my-4 prose-ol:text-base-content
                          prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:bg-base-200 prose-blockquote:p-4 prose-blockquote:rounded-r-lg prose-blockquote:my-6
                          prose-code:bg-base-200 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:text-accent
                          prose-pre:bg-base-300 prose-pre:p-4 prose-pre:rounded-lg prose-pre:overflow-x-auto
                          prose-hr:border-base-300 prose-hr:my-8
                          prose-table:table-auto prose-table:w-full
                          prose-th:bg-primary prose-th:text-primary-content prose-th:p-3 prose-th:text-left
                          prose-td:p-3 prose-td:border-b prose-td:border-base-300
                          prose-img:rounded-lg prose-img:shadow-lg prose-img:mx-auto
                          ">
                <Content />
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Pricing Card -->
          <div class="card bg-primary text-primary-content shadow-xl">
            <div class="card-body text-center">
              <h3 class="card-title justify-center text-2xl">
                Precio Clase Grupal
              </h3>
              
              <div class="text-4xl font-bold mb-4">
                ${course.data.basePrice.toLocaleString('es-CL')}
              </div>
              
              <div class="text-sm opacity-90 mb-6">
                * El precio puede variar según la modalidad y promociones disponibles
              </div>
              
              <div class="card-actions justify-center">
                <button class="btn btn-accent btn-block btn-lg">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  Reservar Sesión
                </button>
              </div>
            </div>
          </div>

          <!-- Course Information -->
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h3 class="card-title text-secondary">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Información del Curso
              </h3>
              
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="font-medium">Sigla:</span>
                  <span class="font-mono">{course.data.acronym}</span>
                </div>
                
                <div class="flex justify-between">
                  <span class="font-medium">Departamento:</span>
                  <span>{course.data.department}</span>
                </div>
                
                <div class="flex justify-between">
                  <span class="font-medium">Nivel:</span>
                  <span>{course.data.level}</span>
                </div>
                
                {course.data.prerequisites && (
                  <div class="flex justify-between">
                    <span class="font-medium">Prerequisitos:</span>
                    <span class="badge badge-warning badge-sm">
                      {course.data.prerequisites.length}
                    </span>
                  </div>
                )}
              </div>
            </div>
          </div>

          <!-- Contact Card -->
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
              <h3 class="card-title text-info">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                ¿Tienes Dudas?
              </h3>
              <p class="text-sm text-base-content/70 mb-4">
                Nuestros coordinadores académicos pueden ayudarte sobre dudas que tengas sobre el curso, formato, precios o el sitio en general.
              </p>
              <div class="card-actions">
                <a
                  href="https://ig.me/m/salvaramos_ing?text=Hola%21%20Tengo%20una%20duda%20sobre%20un%20curso"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn btn-info btn-outline btn-sm btn-block"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Contactar
                </a>
              </div>
            </div>
          </div>

          <!-- Related Courses -->
          {relatedCourses.length > 0 && (
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body">
                <h3 class="card-title text-accent">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                  Cursos Relacionados
                </h3>
                <div class="space-y-3">
                  {relatedCourses.map(relatedCourse => (
                    <a href={`/courses/${relatedCourse.slug}`} class="block hover:bg-base-200 p-3 rounded-lg transition-colors">
                      <div class="flex justify-between items-start">
                        <div>
                          <div class="font-mono text-sm text-base-content/70">{relatedCourse.data.acronym}</div>
                          <div class="font-medium line-clamp-2">{relatedCourse.data.title}</div>
                          <div class="text-sm text-primary font-medium">
                            ${relatedCourse.data.basePrice.toLocaleString('es-CL')}
                          </div>
                        </div>
                        <svg class="w-4 h-4 text-base-content/50 shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </a>
                  ))}
                </div>
                <div class="card-actions">
                  <a href={`/courses?department=${encodeURIComponent(course.data.department)}`} class="btn btn-accent btn-outline btn-sm btn-block">
                    Ver todos los cursos de {course.data.department}
                  </a>
                </div>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>