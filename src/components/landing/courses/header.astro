---
import { DEPARTMENT_COLORS, LEVEL_COLORS, DEPARTMENT_ICONS } from '../../../types/course';
import type { Course } from '../../../content/config';

const { course } = Astro.props as { course: Course };
---

<section class="hero rounded-lg">
  <div class="hero-content justify-start w-full">
    {
      course.image && (
        <div class="avatar ">
          <div class="w-32 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2">
            <img src={course.image} alt={course.title} />
          </div>
        </div>
      )
    }
    <div class="flex flex-col gap-1 max-w-4xl text-left">
      <div class="flex flex-wrap justify-start gap-3">
        <div class="badge badge-ghost badge-lg font-mono font-bold text-lg mb-2">
          {course.acronym}
        </div>

        <div class={`badge ${LEVEL_COLORS[course.level]} badge-lg text-base px-4 py-3`}>
          {course.level}
        </div>
        <div class={`badge ${DEPARTMENT_COLORS[course.department]} badge-lg text-base px-4 py-3`}>
          {DEPARTMENT_ICONS[course.department]}
          {course.department}
        </div>
        {course.featured && <div class="badge badge-warning badge-lg ml-2">‚≠ê Curso Destacado</div>}
      </div>

      <h1 class="text-4xl md:text-5xl font-bold">{course.title}</h1>

      <p class="text-xl text-base-content/50 max-w-2xl px-2">
        {course.description}
      </p>
    </div>
  </div>
</section>
