---
import type { CourseListingEntry } from '../../../types/course';
import { LEVEL_COLORS, DEPARTMENT_ICONS } from '../../../types/course';
interface Props {
  course: CourseListingEntry;
}

const { course } = Astro.props;
---

<div
  class="card course-card relative overflow-hidden bg-white shadow-xl transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl md:cursor-pointer"
  data-department={course.data.department}
  data-level={course.data.level}
  data-acronym={course.data.acronym}
  data-usal-trigger="50%"
>
  <a
    class="absolute inset-0 z-10 hidden md:block"
    href={'/courses/' + course.slug}
    aria-label={`Abrir curso ${course.data.acronym} - ${course.data.title}`}></a>
  <!-- Course Image -->
  {
    course.data.image ? (
      <figure class="relative">
        <img
          src={course.data.image}
          alt={course.data.title}
          class="h-18 w-full object-cover sm:h-18 md:h-24"
          loading="lazy"
        />
      </figure>
    ) : (
      <figure class="from-primary/20 to-secondary/20 relative flex h-18 items-center justify-center bg-gradient-to-br md:h-24">
        <div class="text-4xl opacity-50 sm:text-5xl md:text-6xl">
          {DEPARTMENT_ICONS[course.data.department]}
        </div>
      </figure>
    )
  }

  <div class="card-body justify-between p-4 sm:p-5 md:p-6">
    <!-- Course Acronym and Title -->
    <div class="flex flex-col justify-between gap-2 text-left sm:mt-3">
      <h2 class="card-title line-clamp-2 text-lg font-bold sm:text-xl md:text-2xl">
        {course.data.title}
      </h2>
      <div>
        <div class="text-base-content/50 flex items-center gap-1.5 sm:gap-2">
          <span class="sm:text-sm">
            {course.data.acronym}
            -
            {course.data.level}
          </span>
        </div>
      </div>
    </div>

    <!-- Card Actions -->
    <div class="card-actions justify-end">
      <a
        href={'/courses/' + course.slug}
        class="btn btn-primary btn-sm sm:btn-md btn-block hover:btn-primary-focus group relative z-20 transition-colors"
      >
        Ver horarios
      </a>
    </div>
  </div>
</div>
