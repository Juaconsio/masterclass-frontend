---
import type { CollectionEntry } from 'astro:content';
import { LEVEL_COLORS, DEPARTMENT_ICONS } from '../../../types/course';
interface Props {
  course: CollectionEntry<'courses'>;
  index?: number;
}

const { course, index } = Astro.props;

const getUsalAnimation = (idx: number | null) => {
  if (idx === null) return 'fade-u';
  switch (idx % 4) {
    case 0:
      return 'fade-r delay-[100]';
    case 1:
      return 'fade-u delay-[200]';
    case 2:
      return 'fade-b delay-[300]';
    case 3:
      return 'fade-l delay-[400]';
    default:
      return 'fade-u';
  }
};
---

<div
  class="card bg-base-100 shadow-xl hover:shadow-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2 course-card"
  data-department={course.data.department}
  data-level={course.data.level}
  data-acronym={course.data.acronym}
  data-usal={getUsalAnimation(index || null)}
>
  <!-- Course Image -->
  {
    course.data.image ? (
      <figure class="relative">
        <img
          src={course.data.image}
          alt={course.data.title}
          class="h-32 sm:h-36 md:h-40 w-full object-cover"
          loading="lazy"
        />
        {course.data.featured && (
          <div class="absolute top-2 sm:top-4 right-2 sm:right-4">
            <div class="badge badge-primary badge-sm sm:badge-lg font-bold shadow-lg">
              ⭐ Destacado
            </div>
          </div>
        )}
      </figure>
    ) : (
      <figure class="bg-gradient-to-br from-primary/20 to-secondary/20 h-36 sm:h-40 md:h-48 flex items-center justify-center relative">
        <div class="text-4xl sm:text-5xl md:text-6xl opacity-50">
          {DEPARTMENT_ICONS[course.data.department]}
        </div>
        {course.data.featured && (
          <div class="absolute top-2 sm:top-4 right-2 sm:right-4">
            <div class="badge badge-primary badge-sm sm:badge-lg font-bold shadow-lg">
              ⭐ Destacado
            </div>
          </div>
        )}
      </figure>
    )
  }

  <div class="card-body p-4 sm:p-5 md:p-6 justify-between">
    <!-- Course Acronym and Title -->
    <div class="mb-2 sm:mb-3">
      <div class="flex items-center gap-1.5 sm:gap-2 mb-2">
        <div class="badge badge-ghost font-mono font-bold text-xs sm:text-sm">
          {course.data.acronym}
        </div>
        <div
          class={`badge badge-soft ${LEVEL_COLORS[course.data.level]} font-mono font-bold text-xs sm:text-sm`}
        >
          {course.data.level}
        </div>
      </div>
      <div class="flex items-center justify-between mt-2 sm:mt-3 gap-2">
        <h2 class="card-title text-lg sm:text-xl md:text-2xl font-bold line-clamp-2">
          {course.data.title}
        </h2>
      </div>
    </div>

    <!-- Department and Level Badges -->
    <div class="text-base-content/50 text-xs sm:text-sm flex items-center gap-1">
      {DEPARTMENT_ICONS[course.data.department]}
      <span class="truncate">{course.data.department}</span>
    </div>

    <!-- Course Description -->
    <p class="text-base-content/50 text-xs sm:text-sm line-clamp-3">
      {course.data.description}
    </p>

    <!-- Prerequisites -->
    {
      course.data.prerequisites && course.data.prerequisites.length > 0 && (
        <div class="mb-3 sm:mb-4">
          <div class="collapse collapse-arrow bg-base-200">
            <input type="checkbox" />
            <div class="collapse-title text-xs sm:text-sm font-medium flex items-center gap-2 py-2 sm:py-3 min-h-0">
              <svg
                class="w-3 h-3 sm:w-4 sm:h-4 text-warning shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              Prerequisites ({course.data.prerequisites.length})
            </div>
            <div class="collapse-content px-3 sm:px-4">
              <div class="space-y-1 text-xs">
                {course.data.prerequisites.map((prereq) => (
                  <div class="flex items-center gap-2">
                    <svg
                      class="w-3 h-3 text-error shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span>{prereq}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      )
    }

    <!-- Card Actions -->
    <div class="card-actions justify-end pt-3 sm:pt-4 border-t border-base-300">
      <a
        href={'/courses/' + course.slug}
        class="btn btn-primary btn-sm sm:btn-md btn-block hover:btn-primary-focus transition-colors group"
      >
        Reservar
      </a>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
