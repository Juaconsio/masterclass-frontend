---
import { Icon } from 'astro-icon/components';
---

<div class="bg-base-200">
  <!-- Stats Section -->
  <section class="flex flex-col justify-around items-center px-4 py-8 lg:py-12 gap-6 lg:gap-8">
    <h2 class="py-2 lg:py-4 text-2xl sm:text-3xl lg:text-4xl font-bold text-primary text-center">Hemos logrado grandes resultados</h2>
    <div class="flex flex-col gap-8 lg:gap-12 lg:flex-row justify-around w-full max-w-6xl">
      <div class="flex items-center gap-3 justify-center" data-usal="fade-l">
        <div class="flex items-center h-full gap-3 lg:gap-4 py-4">
          <Icon name="mdi:book-open-variant" size={48} class="text-primary lg:w-16 lg:h-16" />
        </div>
        <div>
          <div class="text-2xl lg:text-3xl font-bold">+<span data-usal="count-[6]">6</span></div>
          <div class="w-28 lg:w-32 text-sm lg:text-base">años de experiencia</div>
        </div>
      </div>

      <div class="flex items-center gap-3 justify-center" data-usal="fade-u delay-[200]">
        <div class="flex items-center h-full gap-3">
          <Icon name="mdi:user-group" size={48} class="text-primary lg:w-16 lg:h-16" />
        </div>
        <div>
          <div class="text-2xl lg:text-3xl font-bold">+ <span data-usal="count-[500]">500</span></div>

          <div class="w-28 lg:w-32 text-sm lg:text-base">Estudiantes acompañados</div>
        </div>
      </div>

      <div class="flex items-center gap-3 justify-center" data-usal="fade-r delay-[400]">
        <div class="flex items-center h-full gap-3">
          <Icon name="mdi:refresh-circle" size={48} class="text-primary lg:w-16 lg:h-16" />
        </div>
        <div>
          <div class="text-2xl lg:text-3xl font-bold">~<span data-usal="count-[80]">80</span>%</div>
          <div class="w-28 lg:w-32 text-sm lg:text-base">Volvió a confiar en nosotros</div>
        </div>
      </div>
    </div>
  </section>
</div>
